<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/user_userpic"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.521"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="TextView"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/user_userpic"
            app:layout_constraintTop_toTopOf="@+id/user_userpic" />

        <TextView
            android:id="@+id/user_usermessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/user_userpic"
            app:layout_constraintStart_toEndOf="@+id/user_userpic" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="163dp"
            android:layout_height="111dp"
            android:layout_marginTop="-24dp"
            android:layout_marginEnd="-50dp"
            android:rotationY="-180"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loginback" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>